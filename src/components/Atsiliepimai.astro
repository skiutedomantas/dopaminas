<style>
  .user-icon {
    max-width: 4.375rem;
    max-height: 4.375rem;
  }

  .main-container {
    padding: 0.94rem;
    margin-top: 3.75rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2 {
    color: var(--large-text-color);
    font-size: 2rem;
    font-weight: 600;
    line-height: normal;
    margin-bottom: 1.44rem;
  }

  h4 {
    color: var(--large-text-color);
    font-size: 1rem;
    font-weight: 600;
    line-height: normal;
  }

  .card-text p {
    color: var(--body-text-color);
    font-size: 0.875rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }

  .left-side {
    margin-bottom: 3rem;
    max-width: 25rem;
  }

  .card {
    display: flex;
    max-width: 24.375rem;
    height: 6.875rem;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--soft-background-color);
    border-radius: 0.625rem;
    padding: 0.3rem;
    padding-left: 1rem;
    filter: drop-shadow(0px 2px 5px rgba(20, 37, 61, 0.1));
    position: relative;
    transition:
      transform 0.3s ease,
      filter 0.3s ease,
      background-color 0.3s ease;
  }

  .card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 6px;
    border-radius: 10px 0 0 10px;
    background-color: var(--large-text-color);
    transition: background-color 0.3s ease;
  }

  .card-container {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }

  .card.active {
    transform: translateX(-50px);
  }

  .card.active::before {
    background-color: var(--primary-color);
  }

  @media (min-width: 768px) {
    .main-container {
      display: flex;
      align-items: center;
      gap: 5rem;
      margin-top: 8rem;
      margin-bottom: 8rem;
      flex-direction: row;
    }
    .left-side {
      max-width: 17rem;
      margin: 0;
    }
  }

  @media (min-width: 1024px) {
    .main-container {
      margin-top: 10.625rem;
      justify-content: center;
      gap: 10.25rem;
    }
  }
</style>

<div class="main-container">
  <div class="left-side">
    <h2>Ka klientai sako apie mane</h2>
    <p>
      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
      tempor incididunt
    </p>
  </div>
  <div class="card-container">
    <div class="card">
      <img class="user-icon" src="../../src/assets/user.png" alt="" />
      <div class="card-text">
        <h4>Karolis</h4>
        <p>Dominyko atsidavimas jo darbui vertas aplodismentu.</p>
      </div>
    </div>
    <div class="card active">
      <img class="user-icon" src="src/assets/user.png" alt="" />
      <div class="card-text">
        <h4>Gediminas</h4>
        <p>
          Dėmesys, nuoširdus rūpestingumas, rezultatas. Patinka. Rekomenduoju.
        </p>
      </div>
    </div>
    <div class="card">
      <img class="user-icon" src="../../src/assets/user.png" alt="" />
      <div class="card-text">
        <h4>Adomas</h4>
        <p>
          Padėjo spręsti kelio skausmo problemą. Patiko paslaugų kaina
          efektyvumas ir profesionalumas.
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  const cards = document.querySelectorAll(".card");
  let activeCard = document.querySelector(".card.active");

  function activateCard(card) {
    if (card === activeCard) return;
    activeCard.classList.remove("active");
    card.classList.add("active");
    activeCard = card;
  }

  cards.forEach((card) => {
    card.addEventListener("mouseenter", () => activateCard(card));
  });
</script>
