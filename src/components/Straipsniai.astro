---
const getContent = async () => {
  const res = await fetch(
    "http://localhost/wordpress/wp-json/wp/v2/straipsniai?acf_format=standard&per_page=3"
  );
  const data = await res.json();
  return data;
};

const blogs = await getContent();
---

<style>
  h1 {
    color: var(--large-text-color);
    font-size: 2rem;
    font-weight: 600;
    line-height: normal;
  }
  .blog-text {
    padding: 0.8rem 1.94rem 2.05rem 1.55rem;
    display: flex;
    flex-direction: column;
  }
  .popular-container {
    margin-top: 2.12rem;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    gap: min(5rem, 2rem + 1vw);
  }
  .blog-card {
    width: 294px;
    background-color: var(--soft-background-color);
    border-radius: 0.625rem;
    filter: drop-shadow(0px 2px 5px rgba(20, 37, 61, 0.1));
  }
  .main-image {
    width: 100%;
    height: 219px;
    object-fit: cover;
    border-top-left-radius: 0.625rem;
    border-top-right-radius: 0.625rem;
  }
  h3 {
    color: var(--large-text-color);
    font-size: 1.25rem;
    font-weight: 600;
    line-height: normal;
    margin-top: 0.62rem;
    margin-bottom: 0.37rem;
  }
  .excerpt {
    font-size: 0.75rem;
    font-weight: 400;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-width: 15.625rem;
    margin-bottom: 0.9rem;
  }
  .date {
    color: var(--primary-color);
    font-size: 0.6875rem;
    font-weight: 600;
    line-height: 160%;
  }
  a {
    color: var(--background-color);
    font-size: 0.75rem;
    font-weight: 600;
    background-color: var(--primary-color);
    padding: 0.3rem 0;
    width: 7rem;
    text-align: center;
    border-radius: 0.3125rem;
  }

  .blog-card:nth-child(2) .excerpt {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 1.29rem;
  }
  .header-container {
    display: flex;
    align-items: center;
    gap: 1.3rem;
    justify-content: center;
  }
  .skaityti-button {
    color: var(--large-text-color);
    font-size: 0.875rem;
    font-weight: 500;
    line-height: normal;
    background-color: var(--soft-background-color);
    border-radius: 0.625rem;
    border: 2px solid var(--large-text-color);
    padding: 0.4rem 1.2rem;
  }
  .main-container {
    margin-top: 3.7rem;
  }

  @media (min-width: 768px) {
    .popular-container {
      flex-direction: row;
      justify-content: start;
      overflow-x: auto;
    }
    .main-container {
      padding: 1rem;
    }
  }
  @media (min-width: 1024px) {
    .header-container {
      justify-content: start;
    }
    .popular-container {
      display: flex;
      flex-direction: row;
      justify-content: center;
    }
  }
</style>

<div class="main-container">
  <div class="header-container">
    <h1>Straipsniai</h1>
    <a class="skaityti-button" href="/straipsniai">Skaityti &rarr;</a>
  </div>
  <div class="popular-container">
    {
      blogs.map((blog) => (
        <div class="blog-card">
          <img
            class="main-image"
            src={blog.acf.pagrindine_nuotrauka}
            alt={blog.title.rendered}
          />
          <div class="blog-text">
            <p class="date">&#9678; Vasario 2, 2025</p>
            <h3>{blog.title.rendered}</h3>
            <p class="excerpt">{blog.acf.trumpas_aprasymas}</p>
            <a href={`/straipsnis/${blog.slug}`}>Skaityti plaƒçiau</a>
          </div>
        </div>
      ))
    }
  </div>
</div>
