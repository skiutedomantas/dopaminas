---
const { blog } = Astro.props;
---

<style>
  img {
    height: 100%;
    object-fit: cover;
    border-top-left-radius: 0.625rem;
    border-top-right-radius: 0.625rem;
  }
  .blog-card {
    display: flex;
    flex-direction: column;
    background-color: var(--background-color);
    border-radius: 0.625rem;
    filter: drop-shadow(0px 2px 5px rgba(20, 37, 61, 0.1));
    max-width: 290px;
  }
  .date {
    color: var(--primary-color);
    font-size: 0.5rem;
    font-weight: 600;
    line-height: 160%;
  }
  h3 {
    color: var(--large-text-color);
    font-size: 1.125rem;
    font-weight: 600;
    line-height: normal;
    margin-top: 0.7rem;
    margin-bottom: 0.4rem;
  }
  .excerpt {
    font-size: 0.75rem;
    font-weight: 400;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-width: 15.625rem;
  }
  .read {
    display: none;
  }
  .info-container {
    padding: 0.62rem 0.94rem 0.9rem 0.94rem;
    min-height: 160px;
  }
</style>

<a href={`/straipsnis/${blog.slug}`}>
  <div class="blog-card">
    <img src={blog.acf.pagrindine_nuotrauka} alt="" />
    <div class="info-container">
      <p class="date">Vasario 2, 2025</p>
      <h3>{blog.title.rendered}</h3>
      <p class="excerpt">{blog.acf.trumpas_aprasymas}</p>
      <a class="read">Skaityti</a>
    </div>
  </div>
</a>
