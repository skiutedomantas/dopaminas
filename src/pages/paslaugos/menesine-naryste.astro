---
import Image from "astro/components/Image.astro";
import Base from "../../layouts/Base.astro";
import money from "../../../src/assets/dollar_blue.png";
import time from "../../../src/assets/clock_blue.png";
import arrow from "../../../src/assets/blue_arrow.png";
import dots_background2 from "../../../src/assets/dots_background2.svg";
import crossmark from "../../../src/assets/remove.png";
import checkmark from "../../../src/assets/check.png";
import contact from "../../../src/assets/contact-mail.png";
import question from "../../../src/assets/questionnaire.png";
import plan from "../../../src/assets/roadmap.png";
import view from "../../../src/assets/view.png";
import pritaikymas from "../../../src/assets/pritaikymas.png";
---

<style>
  main {
    position: relative;
  }
  .background-image {
    position: absolute;
    z-index: -2;
  }

  .dots1 {
    right: 1%;
    bottom: 1%;
  }

  .dots2 {
    opacity: 0;
  }

  .consultation-container {
    width: 100%;
    padding: 1.5rem 1rem;
    position: relative;
    overflow-x: hidden;
  }

  .consultation-header {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .consultation-breadcrumb {
    color: var(--primary-color);
    font-size: 0.75rem;
    margin-bottom: 9px;
  }

  .consultation-breadcrumb a {
    color: var(--primary-color);
    text-decoration: none;
  }

  .breadcrumb-container {
    display: flex;
    align-items: center;
  }

  .arrow-icon {
    height: 10px;
    width: 10px;
    margin-right: 0.7rem;
  }

  .icon {
    width: 0.5357rem;
    height: 0.5357rem;
    margin-right: 0.2rem;
  }

  .consultation-breadcrumb .divider {
    margin: 0 0.25rem;
  }

  .consultation-header h1 {
    line-height: 1.2;
    max-width: 27rem;
    font-size: 2.25rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    color: var(--large-text-color);
  }

  .consultation-description {
    max-width: 29.5rem;
    color: var(--body-text-color);
    font-size: 1rem;
    line-height: 1.6;
  }

  .for-whom-section {
    width: 100%;
    background-color: var(--soft-background-color);
    border-radius: 8px;
    padding: 1.25rem;
    margin-bottom: 4rem;
    margin-top: 2.5rem;
    border-radius: 0.625rem;
    box-shadow: 0px 2px 5px 0px rgba(20, 37, 61, 0.1);
    position: relative;
  }

  .for-whom-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 0.625rem;
    border-radius: 0.8125rem 0rem 0rem 0.8125rem;
    background-color: var(--primary-color);
  }

  .for-whom-section p {
    line-height: 1.6;
  }

  .for-whom-section h2 {
    margin-bottom: 0.81rem;
    color: var(--body-text-color);
    font-size: 1rem;
    font-weight: 500;
  }

  .comparison-table {
    border-collapse: separate;
    border-spacing: 0.5rem;
    width: 100%;
    margin-bottom: 6.25rem;
    overflow: hidden;
  }

  .comparison-table th {
    background-color: var(--primary-color);
    color: var(--background-color);
    padding: 1rem;
    text-align: center;
    font-weight: 500;
    border-radius: 0.3rem;
  }

  tr td:last-child {
    background-color: #e8eef8 !important;
  }

  .comparison-table td {
    border-radius: 0.3rem;
    padding: 1rem;
    text-align: center;
    background-color: var(--soft-background-color);
  }

  .comparison-table td:first-child {
    text-align: left;
    font-weight: 500;
  }

  .x-icon img {
    width: 2.25rem;
    height: 2.25rem;
  }

  .check-icon img {
    width: 2.5rem;
    height: 2.5rem;
  }

  .how-it-works {
    text-align: center;
    margin-bottom: 3rem;
  }

  .how-it-works h2 {
    font-weight: 500;
    font-size: 1.5rem;
    margin-bottom: 4.6875rem;
    color: var(--large-text-color);
  }

  .steps-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .step {
    display: flex;
    text-align: left;
    position: relative;
  }

  .reverse {
    flex-direction: row-reverse;
  }

  .step-number {
    width: 90px;
    background-color: var(--primary-color);
    color: var(--background-color);
    border-radius: 0.9375rem 0rem 0rem 0.9375rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30px;
    font-weight: bold;
    flex-shrink: 0;
    padding-right: 10px;
    margin-right: -0.875rem;
  }

  .number-reversed {
    border-radius: 0rem 0.9375rem 0.9375rem 0rem;
    margin-right: 0rem;
    margin-left: -0.875rem;
    z-index: -1;
    padding-right: 0px;
    padding-left: 10px;
  }

  .step-content {
    max-width: fit-content;
    display: flex;
    align-items: center;
    background-color: var(--soft-background-color);
    padding: 1rem;
    border-radius: 0.9375rem;
    gap: 2.5rem;
    flex: 1;
  }

  .step-content h3 {
    font-weight: 500;
    font-size: 1.1rem;
    margin-bottom: 0.1rem;
    color: var(--large-text-color);
  }

  .step-content p {
    color: var(--body-text-color);
    font-size: 1rem;
    line-height: 1.6;
    max-width: 285px;
  }

  .step-content img {
    display: none;
  }

  @media (min-width: 550px) {
    .step-content img {
      margin-right: 35px;
      display: block;
      height: 64px;
      width: 64px;
    }

    .step-content .reversed {
      margin-right: 0;
      margin-left: 35px;
    }
  }

  @media (min-width: 768px) {
    .dots1 {
      right: 1%;
      bottom: 15%;
    }

    .dots2 {
      opacity: 1;
      right: 1%;
      top: 10%;
    }

    .consultation-container {
      padding: 2rem 1.5rem;
    }

    .consultation-breadcrumb .divider {
      margin: 0 0.5rem;
    }

    .for-whom-section {
      width: 80%;
      padding: 1.8rem 3rem;
      margin-bottom: 3.5rem;
      margin-top: 3.5rem;
    }

    .how-it-works {
      margin-bottom: 3.5rem;
    }

    .how-it-works h2 {
      font-size: 2rem;
      margin-bottom: 2.8rem;
    }

    .step-number {
      font-size: 50px;
    }

    .step-content {
      padding: 1.25rem;
    }

    .step-content h3 {
      font-size: 1.2rem;
    }

    .step-content p {
      font-size: 0.9rem;
      max-width: 17.2rem;
    }
  }

  @media (min-width: 1024px) {
    .dots1 {
      right: 35%;
      bottom: 8%;
    }

    .dots2 {
      opacity: 1;
      right: 1%;
      top: 6%;
    }

    .dots3 {
      left: 32%;
      bottom: 22%;
    }

    .consultation-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 2.5rem 1rem;
    }

    .for-whom-section {
      margin-top: 5.6rem;
      margin-bottom: 5.4rem;
    }

    .for-whom-section h2 {
      font-size: 1.25rem;
    }

    .how-it-works {
      margin-bottom: 4rem;
    }

    .step-number {
      font-size: 64px;
    }

    .step-content {
      padding: 1.5rem;
    }

    .step-content h3 {
      font-size: 1.25rem;
    }

    .step-content p {
      font-size: 0.95rem;
    }
  }
</style>

<Base title="Mėnesinė narystė">
  <main>
    <div class="background-image dots1">
      <Image src={dots_background2} alt="background-image" />
    </div>
    <div class="background-image dots2">
      <Image src={dots_background2} alt="background-image" />
    </div>
    <div class="background-image dots3">
      <Image src={dots_background2} alt="background-image" />
    </div>
    <div class="consultation-container">
      <div class="consultation-breadcrumb">
        <a href="/paslaugos" class="breadcrumb-container">
          <Image class="arrow-icon" src={arrow} alt="arrow" />
          <span><Image class="icon" src={time} alt="clock" /></span>
          <span>1 MĖN</span>
          <span class="divider">|</span>
          <span> <Image class="icon" src={money} alt="money" /></span>
          <span class="time">50€</span>
        </a>
      </div>
      <div class="consultation-header">
        <h1>Mėnesinė narystė</h1>
        <p class="consultation-description">
          Ši prenumeruojama paslauga skirta tiems, kurie reabilituojasi po
          traumos, jaučia stuburo ar sąnarių skausmus, nori sportuoti
          taisyklingai ir stiprėti nei neturėdami galimybės lankyti
          individualiose užsiėmimuose.
        </p>
      </div>

      <section class="for-whom-section">
        <h2>Kam skirta?</h2>
        <p>
          ✔️ Norintiems nuolatinio palaikymo ir priežiūros <br />
          ✔️ Siekiantiems reguliariai atnaujinti pratimų programą <br />
          ✔️ Norintiems gauti grįžtamąjį ryšį apie atliekamus pratimus <br />
          ✔️ Ieškantiems ekonomiškesnio sprendimo nei nuolatinės konsultacijos <br
          />
          ✔️ Turintiems motyvacijos dirbti savarankiškai, bet reikalingas vadovavimas
        </p>
      </section>

      <table class="comparison-table">
        <thead>
          <tr>
            <th></th>
            <th>Paprastas pratimų planas</th>
            <th>Mėnesinė narystė</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Individualus pratimų planas pagal tikslus</td>
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td
              >Pratimai, skirti skirtingoms treniruočių vietoms (namuose, sporto
              salėje, su minimaliu inventoriumi)</td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td>Pratimų atnaujinimas pagal progresą</td>
            <td
              ><span class="x-icon"
                ><Image src={crossmark} alt="crossmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td>Nuolatinis stebėjimas ir palaikymas</td>
            <td
              ><span class="x-icon"
                ><Image src={crossmark} alt="crossmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td>Galimybė koreguoti pratimų planą pagal atsiliepimus</td>
            <td
              ><span class="x-icon"
                ><Image src={crossmark} alt="crossmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td>Asmeninės konsultacijos su kineziterapeutu</td>
            <td
              ><span class="x-icon"
                ><Image src={crossmark} alt="crossmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td>Motyvacija ir palaikymas per optimalų ryšį</td>
            <td
              ><span class="x-icon"
                ><Image src={crossmark} alt="crossmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
          <tr>
            <td>Prisitaikymas prie pasikeitusių poreikių</td>
            <td
              ><span class="x-icon"
                ><Image src={crossmark} alt="crossmark" /></span
              ></td
            >
            <td
              ><span class="check-icon"
                ><Image src={checkmark} alt="checkmark" /></span
              ></td
            >
          </tr>
        </tbody>
      </table>

      <section class="how-it-works">
        <h2>
          Pratimai gali būti pritaikyti namams, sporto salei ar kitoms
          aplinkoms. Kaip tai veikia?
        </h2>

        <div class="steps-container">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <div class="step-text">
                <h3>Susisiekite</h3>
                <p>
                  Pirmiausia susisiekite telefonu arba el. paštu, įvertinsiu
                  situaciją, atsakysiu klausimyną.
                </p>
              </div>
              <Image src={contact} alt="susisiekite" />
            </div>
          </div>

          <div class="step reverse">
            <div class="step-number number-reversed">2</div>
            <div class="step-content reverse">
              <div class="step-text">
                <h3>Klausimynas</h3>
                <p>
                  Užpildykite klausimyną apie savo būklę, tikslus, laiką ir
                  vietą treniruotėms.
                </p>
              </div>
              <Image class="reversed" src={question} alt="Klausimynas" />
            </div>
          </div>

          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <div class="step-text">
                <h3>Pratimų planas</h3>
                <p>
                  Sudaromas individualus planas su video paaiškinimais. Jis
                  atnaujinamas kas 2 savaites pagal progresą.
                </p>
              </div>
              <Image src={plan} alt="Pratimu planas" />
            </div>
          </div>

          <div class="step reverse">
            <div class="step-number number-reversed">4</div>
            <div class="step-content reverse">
              <div class="step-text">
                <h3>Stebėjimas</h3>
                <p>
                  Po kiekvienos treniruotės pažymėsite, kad atlikote pratimus,
                  ir paliksite trumpą komentarą.
                </p>
              </div>
              <Image class="reversed" src={view} alt="Stebejimas" />
            </div>
          </div>

          <div class="step">
            <div class="step-number">5</div>
            <div class="step-content">
              <div class="step-text">
                <h3>Pritaikymas</h3>
                <p>
                  Planas nuolat tobulinamas pagal jūsų atsiliepimus ir pažangą.
                </p>
              </div>
              <Image src={pritaikymas} alt="Pritaikymas" />
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
</Base>
